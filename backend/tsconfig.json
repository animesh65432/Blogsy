{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts",   // Ensure your source files are being included
   
  ],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types", "./types"]
}
